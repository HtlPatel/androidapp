                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_20ssp"
                android:gravity="center"
                />

            <View
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

           <android.support.v7.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_10sdp">

               <LinearLayout
                   android:layout_width="@dimen/_140sdp"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_40sdp"
                       android:src="@drawable/photo2"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:textSize="@dimen/_14ssp"
                   android:textColor="@color/blue_900"
                   android:text="stunning Desiging"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:textSize="@dimen/_10ssp"
                   android:layout_marginRight="@dimen/_5sdp"
                   android:textColor="@color/black2"
                   android:text="sDesigning is not just about style, it's about finding the best way to communicate your message."/>

               </LinearLayout>

           </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="@dimen/_140sdp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:src="@drawable/doct"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/blue_900"
                            android:text="Development"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black2"
                            android:text="The world of technology is dynamic in nature. We develop sustainable technological solutions"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>



        </LinearLayout>

            <LinearLayout
