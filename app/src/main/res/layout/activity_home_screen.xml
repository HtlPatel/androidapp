<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg5"
    android:layout_height="match_parent"
    tools:context=".activites.HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo1"/>

        <LinearLayout
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:text="Byte And Bits"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="website and app devloping "
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/BtnAbout"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_10ssp"
                android:background="@color/blue_900"
                android:text="About us" />

            <Button
                android:id="@+id/BtnServise"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:background="@color/blue_A200"
                android:layout_weight="1"
                android:textSize="@dimen/_10ssp"
                android:text="Servise" />

            <Button
                android:id="@+id/BtnProducts"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:background="@color/blue_900"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:text="Products" />

            <Button
                android:id="@+id/BtnTrainning"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:background="@color/blue_A200"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:text="Training/Internship" />

            <Button
                android:id="@+id/BtnContact"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/blue_900"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:text="Contact Us" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backg2"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="@dimen/_230sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who are we?"
            android:textSize="@dimen/_20ssp"
            android:layout_marginLeft="@dimen/_90sdp"
            android:textColor="@color/black" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:text="We are a close team of creative professionals based out of Bhavnagar, Gujarat. We are passionate about partnering with good people and organizations to provide exceptional custom web solutions. We approach each project and design challenge with process-driven intentionality to inform the identities and experiences we create. We endeavor toward work that drives action, and generates results. Are you looking to have greater impact? We’d love to help."
            android:textColor="@color/black"/>

    </LinearLayout>

        <LinearLayout
