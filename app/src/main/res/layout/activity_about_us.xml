<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg5"
    tools:context=".activites.AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo1"/>

            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_width="wrap_content"
                    android:text="Byte And Bits"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="website and app devloping "
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/BtnAbout"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_10ssp"
                android:background="@color/blue_900"
                android:text="About us" />

            <Button
                android:id="@+id/BtnServise"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:background="@color/blue_A200"
                android:layout_weight="1"
                android:textSize="@dimen/_10ssp"
                android:text="Servise" />

            <Button
                android:id="@+id/BtnProducts"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:background="@color/blue_900"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:text="Products" />

            <Button
                android:id="@+id/BtnTrainning"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:background="@color/blue_A200"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:text="Training/Internship" />

            <Button
                android:id="@+id/BtnContact"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/green_100"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:text="Contact Us" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/thunder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:text="Best Desining"/>

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10ssp"
                        android:text="Quick Devlopment"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© Copyright 2014-2019 ByteAndBits"
            android:textColor="@color/white"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Right Reserved"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>